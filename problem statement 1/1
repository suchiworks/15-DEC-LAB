
import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;

public class CountryMap {  // class name
	private HashMap<String, String> r1;
	
	public CountryMap() {
		r1 = new HashMap<String, String>();
	}
	
	public HashMap<String, String> saveCountryCapital(String CountryName, String capital) {
		r1.put(CountryName, capital);
		return r1;
	}
	
	public String getCapital(String CountryName) {
		return r1.get(CountryName);
	}
	
	public String getCountry(String capitalName) {
		Set<Entry<String, String>> set = r1.entrySet();
		Iterator<Entry<String, String>> it = set.iterator();
		
		while (it.hasNext()) {
			Map.Entry<String, String> me = it.next();
			
			if (me.getValue().equals(capitalName))
				return me.getKey();
		}
		
		return null;
	}
	
	public HashMap<String, String> swapKyeValue() {
		HashMap<String, String> r2 = new HashMap<String, String>();
		
		Set<Entry<String, String>> set = r1.entrySet();
		Iterator<Entry<String, String>> it = set.iterator();
		
		while (it.hasNext()) {
			Map.Entry<String, String> me = it.next();
			r2.put(me.getValue(), me.getKey());
		}
		
		return r2;
	}
	
	public ArrayList<String> toArrayList() {
		ArrayList<String> list = new ArrayList<String>();
		
		Set<Entry<String, String>> set = r1.entrySet();
		Iterator<Entry<String, String>> it = set.iterator();
		
		while (it.hasNext()) {
			Map.Entry<String, String> me = it.next();
			list.add(me.getKey());
		}
		
		return list;
	}
